{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "esModuleInterop": true,
    "target": "es5",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
  },
  "ts-node": {
    "experimentalSpecifierResolution": "node"
  }
}
